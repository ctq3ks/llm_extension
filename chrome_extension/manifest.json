{
  "manifest_version": 3,
  "name": "AIsistant",
  "version": "0.0",
  "description": "Generated text based on website context.",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*",
        "https://mail.google.com/*",
        "https://github.com/*"
      ],
      "js": ["scripts/content.js"]
    }
  ]
}
